<?xml version="1.0" encoding="utf-8"?>
<!-- Background pour les Spinners de recherche -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Couleur de fond -->
    <solid android:color="#FFFFFF" />
    
    <!-- Bordure -->
    <stroke 
        android:width="1dp"
        android:color="#DDDDDD" />
    
    <!-- Coins arrondis -->
    <corners android:radius="8dp" />
    
    <!-- Padding interne -->
    <padding 
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
    
</shape>
